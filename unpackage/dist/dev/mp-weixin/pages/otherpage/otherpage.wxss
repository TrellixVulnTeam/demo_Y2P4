.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #C0C0C0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
}
.tab-bar .tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border: 1rpx solid black;
  border-radius: 10%;
}
.tab-bar .tab-bar-item .tab_img {
  width: 40rpx;
  height: 41rpx;
}
.tab-bar .tab-bar-item .tab_text {
  font-size: 25rpx;
  margin-top: 9rpx;
}


